#!/bin/bash
#SBATCH --job-name=BBP700                   # Job name
#SBATCH --output=./logs/BBP700_%j.log        # Standard output and error log
#SBATCH --ntasks=1                         # Number of tasks (1 process)
#SBATCH --cpus-per-task=24 # 
#SBATCH --mem=30G                         # Memory per node
#SBATCH --time=01:00:00                    # Time limit (hh:mm:ss)
#SBATCH --partition=lovelace                    # Partition name 
#SBATCH --gpus=1             # Number of GPUs
##SBATCH --exclusive

# Set the environment variables
dataset_name="BBP700"
config_path="config_files/BBP700.yaml"
grammar_path="grammars/argo.grammar"

# Run the Python script with the specified arguments
./clear.sh

python -m evodenss.main \
    -d "$dataset_name" \
    -c "$config_path" \
    -g "$grammar_path" \
    -r 3050\
    --gpu-enabled \
    --printing 0

